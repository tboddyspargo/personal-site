{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "package.json",
      "package-lock.json",
      "tsconfig.json",
      "babel.config.json",
      "README.md",
      "webpack.*.js",
      ".github/**",
      ".vscode/**",
      ".firebase/**",
      "full_quality_images/**",
      "node_modules/**",
      "planning/**",
      "src/**",
      ".git/**",
      "**/.*",
      "**/.sass-cache/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
